<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{yyyy/MM/dd HH:mm:ss} %4level %logger{26}.%2line: %message @%thread:%date{ss.SSS}%n</pattern>
		</encoder>
	</appender>
	
	<logger name="org.springframework.data" level="debug" />
	<logger name="me.wener.cbhistory" level="debug" />
	<logger name="com.j256.ormlite" level="info" />
	<logger name="com.j256.ormlite.stmt.mapped.BaseMappedStatement" level="info" />
	<logger name="com.j256.ormlite.stmt.mapped.MappedCreate" level="info" />
	<logger name="com.j256.ormlite.stmt.StatementExecutor" level="info" />

    <!--调试 SQL 输出-->
	<!--<logger name="java.sql.PreparedStatement" level="DEBUG" />-->
	<!--<logger name="java.sql.Statement" level="DEBUG" />-->
	<!--<logger name="java.sql.Connection" level="DEBUG" />-->
	<!--<logger name="java.sql.ResultSet" level="INFO" />-->

    <!--关闭 c3p0 恶心的异常信息-->
	<!--<logger name="com.mchange.v2.cfg" level="INFO" />-->

	<root level="info">
		<appender-ref ref="console" />
	</root>

</configuration>