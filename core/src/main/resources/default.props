[app.info]
version=0.x
title=西贝历史评论收集
logo=cbhistory
author.name=wener
author.email=wenermail@gmail.com
author.site=http://wener.me
author.blog=http://blog.wener.me

# 开发时的 jdbc 连接配置
[jdbc<dev>]
driver=com.mysql.jdbc.Driver
url=jdbc:mysql://localhost:3306/cbh?useUnicode=true&characterEncoding=UTF-8&autoReconnect=true
username=root
password=root

[<dev>]
# 持久单元的名字
persistence.unit=me.wener.cbhistory.local


# 程序日记记录配置信息
[app.log]
# 这里列出了一些关于应用程序配置的基本属性
# 设置程序记录日志的等级,默认为 INFO
level = INFO

# 应用文章配置
[app.article]
# 文章更新间隔 默认为 300
update.interval = 300

# 文章更新因子,当距离过期时间低于这个值时,会以
# 距离过期的分钟数/该因子 * 更新间隔 来计算新的更新间隔时间
update.factor = 120

# 文章过期的小时数,默认为 7 天 即 168 小时
expired.hours = 168


# 运行时调度
[app.run.schedule]
# 运行时 是否自动开始调度
auto = true

[]
@profiles=dev

[c3p0]
# 默认值
initialPoolSize=3
maxPoolSize=15
minPoolSize=3
# 尝试性的连接参数
maxConnectionAge=7200
maxIdleTime=3600